
<%= link_to "Logout", destroy_guard_session_path, method: :delete, :class => 'navbar-text pull-right'  %>


<h1>Guests</h1>
<table class = "table table-striped table-bordered table-hover">
  <thead class = "thead-dark">
    <tr>
      <th>Plat number</th>
      <th>Block</th>
      <th>No apartment</th>
      <th>Date</th>
      <th>Phone number</th>
      <th>Purpose</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.plat_number %></td>
        <td><%= guest.block %></td>
        <td><%= guest.no_apartment %></td>
        <td><%= guest.date %></td>
        <td><%= guest.phone_number %></td>
        <td><%= guest.purpose %></td>
        <td><%= link_to 'View', guest %></td>
        <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
        <td><%= link_to 'Delete', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

