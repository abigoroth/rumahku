        table#dttb-guests.responsive.nowrap.table.table-hover data-sort="true" data-source="#{url_for(format: :json)}"
          thead
            tr
              th data-data="plat_number" Plat number
              th data-data="block" Block
              th data-data="phone_number" Phone number
              th data-data="purpose" Purpose 
              th data-data="guest_in" Guest In
              th data-data="guest_out" Guest Out
              th data-data="url" data-orderable="false" data-class-name="all" data-searchable="false" class="skip-export" width="100px"
            
               
            
              
          tbody
            - @guests.each do |guest| 
              tr
                td = guest.plat_number
                td = guest.block
                td = guest.phone_number
                td = guest.purpose
                td = guest.guest_in
                td = guest.guest_out
                /td = link_to 'Show', guest
                /td = link_to 'Edit', edit_guest_path(guest)
                /td = link_to 'Destroy', guest, data: { confirm: 'Are you sure?' }, method: :delete

                td.dropdown
                    button#dropdownMenu1.btn.btn-default.dropdown-toggle[type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"]
                        |  Action 
                        span.caret
                    ul.dropdown-menu[aria-labelledby="dropdownMenu1"]
                        li
                        = link_to 'Show', guest
                        li
                        = link_to 'Edit', edit_guest_path(guest)
                        li
                        = link_to 'Destroy', guest, data: { confirm: 'Are you sure?' }, method: :delete

        br
         br
         = link_to 'Back', pages_residentlist_path
        
      
